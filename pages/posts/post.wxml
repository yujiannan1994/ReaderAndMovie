<view>
  <swiper indicator-dots="true" autoplay="true" interval="5000">
    <swiper-item>
      <image src="/images/米诺·路飞1366.jpg"></image>
    </swiper-item>
    <swiper-item>
      <image src="/images/米诺·索隆1366.jpg"></image>
    </swiper-item>
    <swiper-item>
      <image src="/images/34.1366.jpg"></image>
    </swiper-item>
  </swiper>
  <block wx:for="{{posts_key}}" wx:for-item="item" wx:for-index="idx">
    <view class="post-container">
      <view class="post-author-date">
        <image class="post-author" src="{{item.author_img}}"></image>
        <text class="post-date">{{item.date}}</text>
      </view>
      <text class="post-title">{{item.title}}</text>
      <image class="post-image" src="{{item.post_img}}"></image>
      <text class="post-content">{{item.content}}</text>
      <view class="post-like">
        <image class="post-like-image" src="../../images/icon/avatar.png"></image>
        <text class="post-like-font">{{item.view_num}}</text>
        <image class="post-like-image" src="../../images/icon/avatar.png"></image>
        <text class="post-like-font">{{item.collect_num}}</text>
      </view>
    </view>
  </block>
</view>